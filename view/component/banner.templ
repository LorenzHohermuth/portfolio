package component

import "fmt"

templ Banner(text string, icon string, colorBg string, colorText string) {
<div class={"col-span-3 text-center py-3", fmt.Sprintf("bg-[%s]", colorBg), fmt.Sprintf("text-[%s]", colorText)}>
		for i, x:= 0, 10 ; i < x ; i++ {
			<div class="inline">
				{text}
			</div>
			if i + 1 < x {
				<div class="inline mr-3 ml-1.75">
					{icon}
				</div>
			}
		}
	</div>
}
